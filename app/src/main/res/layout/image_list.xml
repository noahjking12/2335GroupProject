<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/catImageList"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/pictureId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kitten_fragmentTriger"
        app:layout_constraintStart_toStartOf="@+id/catImageList"
        app:layout_constraintTop_toBottomOf="@+id/catImageList" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kitten_add_btn"
        android:textColor="#37474F"
        app:layout_constraintStart_toStartOf="@+id/pictureId"
        app:layout_constraintTop_toBottomOf="@+id/pictureId" />

</androidx.constraintlayout.widget.ConstraintLayout>